#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>

#define MAX 100

int stack[MAX];
int top = -1;

// push function
void push(int x) {
    stack[++top] = x;
}

// pop function
int pop() {
    return stack[top--];
}

// main evaluation logic
int main() {
    char exp[MAX];
    int i = 0, value, op1, op2;

    printf("Enter postfix expression: ");
    scanf("%s", exp);

    while (exp[i] != '\0') {
        // If digit, convert char to integer and push
        if (isdigit(exp[i])) {
            push(exp[i] - '0');
        } 
        else {
            // operator encountered â†’ pop two operands
            op2 = pop();
            op1 = pop();

            switch (exp[i]) {
                case '+': value = op1 + op2; break;
                case '-': value = op1 - op2; break;
                case '*': value = op1 * op2; break;
                case '/': value = op1 / op2; break;
                case '^': {
                    value = 1;
                    for (int k = 0; k < op2; k++)
                        value *= op1;
